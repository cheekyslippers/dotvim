#!/bin/bash

# script to display useful shell variables
#
echo
echo "Current shell config is"
echo

if [ -n ${ROGUEROOT:+1} ]; then
   echo "ROGUEROOT = " $ROGUEROOT
else
   echo "ROGUEROOT is undefined"
fi

if [ -n ${SIMROOT:+1} ]; then
   echo "SIMROOT = " $SIMROOT
else
   echo "SIMROOT is undefined"
fi

if [ -n ${DCONFIG:+1} ]; then
   echo "DCONFIG = " $DCONFIG
else
   echo "DCONFIG is undefined"
fi

if [ -n ${ROGUE_TESTDIR:+1} ]; then
   echo "ROGUE_TESTDIR = " $ROGUE_TESTDIR
else
   echo "ROGUE_TESTDIR is undefined"
fi

if [ -n ${BVNC:+1} ]; then
   echo "BVNC = " $BVNC
else
   echo "BVNC is undefined"
fi

if [ -n ${INCISIV_VERSION:+1} ]; then
   echo "INCISIV_VERSION = " $INCISIV_VERSION
else
   echo "INCISIV_VERSION is undefined"
fi


if [ -n ${INCISIV_PATCH:+1} ]; then
   echo "INCISIV_PATCH = " $INCISIV_PATCH
else
   echo "INCISIV_PATCH is undefined"
fi


if [ -n ${UVM_HOME:+1} ]; then
   echo "UVM_HOME = " $UVM_HOME
else
   echo "UVM_HOME is undefined"
fi


if [ -n ${ROGUEASM:+1} ]; then
   echo "ROGUEASM = " $ROGUEASM
else
   echo "ROGUEASM is undefined"
fi


if [ -n ${DOCSROOT:+1} ]; then
   echo "DOCSROOT = " $DOCSROOT
else
   echo "DOCSROOT is undefined"
fi


echo
echo "pwd =" $PWD
echo
